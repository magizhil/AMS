<div class="w3-container">
     <header class="w3-container w3-card-4  w3-teal">
        <a href="~/Software/SwAssetDetail" class="w3-button w3-xlarge w3-circle w3-theme-action w3-right w3-light-green" style="top:97px;right:18px;position:fixed">+</a>
        <h3>Software Details</h3>
    </header>
    <div class="w3-row" >

        <div class="w3-border">

            <div class="w3-container w3-responsive">

                <table class="w3-table w3-striped w3-border"   id="SoftView">
                    <thead>
                        <tr class="w3-blue">
                            <th>Edit</th>
                            @*<th>View</th>*@
                            <th>
                                Category
                            </th>
                            <th>
                                Vendor_Name
                            </th>
                            <th>
                                Brand
                            </th>
                            <th>
                                Model_Name
                            </th>
                            <th>
                                Model No
                            </th>
                            <th>
                                Serial No
                            </th>
                            <th>
                                License Type
                            </th>
                            <th>
                                User License
                            </th>
                            <th>
                                Machine License
                            </th>
                            <th>
                                Asset No
                            </th>
                            <th>
                                Invoice Number
                            </th>
                            <th>
                                PO Date
                            </th>
                            <th>
                                ACtivate Date
                            </th>
                            <th>
                                Renewal Date
                            </th>
                            <th>
                                Asset Value
                            </th>
                            <th>
                                Asset Status
                            </th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink("Edit", "SoftwareGet", new { softcode = item.ASSETTAG })
                                </td>
                                @*<td>@Html.ActionLink("View", "SoftwareView", new { softcode = item.ASSETTAG })</td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.mscatsw.CATGDESC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.msvendsw.VENDNAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BRAND)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MDLNAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MDLNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SLNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LICTYPE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.USRLIC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MACLIC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ASSTNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.INVOICENUMBER)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PODATE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ACTDATE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RENEWALDATE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ASSETVAL)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SWSTS)
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $("#SoftView").dataTable({
            "scrollY": 300,
            "scrollX": true,
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>